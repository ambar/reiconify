{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "ignoreChanges": [
    "**/docs/**",
    "**/fixtures/**",
    "**/__tests__/**",
    "**/test/**",
    "**/*.mdx",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "allowBranch": "main",
      "conventionalCommits": true
    }
  }
}
